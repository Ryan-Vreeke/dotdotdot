{
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "toolbar": {
    "breadcrumbs": true
  },
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  //VIM
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "tab_bar": { "show": true },
  "scrollbar": { "show": "never" },

  //rainbow indentations
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "preview_tabs": { "enabled": false },

  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": { "enabled": true }
  },
  "wrap_guides": [90]
}
